<div class="container-custom container-fluid couple-bg-container mt-5">
  <div class="row justify-content-center">
    <% content_for :title, "Édition de Profil" %>
    <% content_for :meta_description, "Modifier les détails de votre profil utilisateur." %>
    <h2 style="color: #ffffff; text-shadow: 1px 1px 20px #000000;">
      Modifier mes informations</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :Prénom %><i class="text-muted small"> (Facultatif)</i>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Nom %><i class="text-muted small"> (Facultatif)</i>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :nouveau_mot_de_passe %> <i class="text-muted small"> (Laissez vide si vous ne souhaitez pas le changer)</i><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em class="text-muted small"><%= @minimum_password_length %> caractères minimum</em>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :confirmation_du_mot_de_passe %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
      <div class="form-group">
        <%= f.label :mot_de_passe_actuel %> <i class="text-muted small"> (Afin de valider vos modifications)</i><br />
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
      </div>
      <div class="form-group d-flex justify-content-center">
        <%= f.submit "Mettre à jour", class: "btn sweetButton" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center" 
      <%= button_to "Retour", :back, class: "warningButton mt-3" %>
    </div>
      <div class="d-flex justify-content-center mt-5" style="color: #ffffff;">
        Vous n'êtes pas satisfait ?
      </div>
      <div class="d-flex justify-content-center" >
        <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "dangerButton btn-lg" %>
      </div>
    </div>
  </div>
</div>
</div>
