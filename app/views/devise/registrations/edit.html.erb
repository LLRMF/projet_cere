<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <% content_for :title, "Édition de Profil" %>
          <% content_for :meta_description, "Modifier les détails de votre profil utilisateur." %>

          <h2 class="text-center">Modifier mes informations</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.label :Prénom %><i class="text-muted"> (Facultatif)</i>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :Nom %><i class="text-muted"> (Facultatif)</i>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :nouveau_mot_de_passe %> <i>(laissez vide si vous ne souhaitez pas le changer)</i><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caractères minimum</em>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :confirmation_du_mot_de_passe %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group">
              <%= f.label :mot_de_passe_actuel %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer vos changements)</i><br />
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
            </div>
          <% end %>
          <div class="text-center">
            Mécontent ? <%= button_to "Annuler mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr ?", turbo_confirm: "Êtes-vous sûr ?" }, method: :delete, class: "btn btn-danger" %>
          </div>

          <%= link_to "Retour", :back, class: "btn btn-secondary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>