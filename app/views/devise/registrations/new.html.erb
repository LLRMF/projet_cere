
<div class="container-custom">
<h2>Sign up</h2>
<%= form_tag(registration_path(resource_name), method: 'post') do %>
  <!-- Replace 'registration_path' with your actual registration path -->
  
  <!-- Error Messages -->
  <div class="error-messages">
    <!-- Render your error messages here if any -->
  </div>

  <div class="field">
    <%= label_tag 'email', 'Email' %><br>
    <%= email_field_tag 'email', nil, autofocus: true, autocomplete: 'email' %>
  </div>

  <div class="field">
    <%= label_tag 'password', 'Password' %>
    <em>(8 characters minimum)</em><br>
    <%= password_field_tag 'password', nil, autocomplete: 'new-password' %>
  </div>

  <div class="field">
    <%= label_tag 'password_confirmation', 'Password Confirmation' %><br>
    <%= password_field_tag 'password_confirmation', nil, autocomplete: 'new-password' %>
  </div>

  <div class="actions">
    <%= submit_tag 'Sign up' %>
  </div>
<% end %>
</div>

