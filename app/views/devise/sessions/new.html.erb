<div class="container-custom events-container-bg">
  <h2>Se connecter</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :mot_de_passe %><br>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :souviens_toi_de_moi %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Me connecter" %>
    </div>
  <% end %>
  <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "btn badButton btn-lg mt-1" %>
</div>
<!-- Lien d'inscription -->
<div class="text-center mt-4" style="color: #fcb1cf;">
  <p>Pas encore inscrit sur Ceremonia ?</p>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "sweetButton btn-lg mt-1" %>
</div>
