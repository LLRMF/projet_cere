<% content_for :title, "Connexion sur Ceremonia" %>
<% content_for :meta_description, "Connectez-vous à votre compte Ceremonia. Accédez à toutes les fonctionnalités de votre compte en vous connectant maintenant." %>
<div class="container-custom events-container-bg apparitionprofil">
  <h2 style="color: #fc8d83; text-shadow: 2px 2px 20px rgba(0, 0, 0, 1), -2px -2px 20px rgba(0, 0, 0, 1);">Se connecter</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email %><br>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="mb-3">
      <%= f.label :mot_de_passe %><br>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :souviens_toi_de_moi, "Souviens-toi de moi" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Me connecter", class: "sweetButton btn-lg", style: "color: #ffffff; background-color: #e4685d;" %>
    </div>
    <div class="d-flex justify-content-center">
      <div class="text-center mt-4">
        <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "warningButton btn-sm" %>
      </div>
    </div>
  <% end %>
  <br>
  <div class="text-center mt-4">
    <h6 class="d-flex justify-content-center text-center mt-4" style="text-color: #e4685d;">
      Pas encore parmi nous ?
    </h6>
    <div class=" d-flex justify-content-center text-center">
      <%= button_to "S'inscrire", new_user_registration_path(resource_name), class: "sweetButton btn-lg" %>
    </div>
  </div>
</div>
