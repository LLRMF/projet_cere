<div class="bkg-album animate-bottom">
  <%# affichage de toutes les albums %>

  <h1>albums</h1>
  <br><br>

  <div class="background-content">
    <h4 class="eventlisttitre">Créez, éditez, gérez vos albums photos comme vous le souhaitez !</h4>
    <br><br>

    <% if @albums.empty? %>
      <h2>Vous n'avez pas encore d'album photo</h2>
    <% end %>

    <%= link_to 'Créer ton album', new_event_album_path(@event), class: 'btn sweetButton' %>
    <%= link_to 'Retour', event_path(@event), class: 'btn sweetButton' %>

    <br>

    <% @albums.each do |album| %>
      <br>
      <div>
        <h3 class="eventlisttitre">titre de l'album :</h3>
        <h5 class="h5-album"><%= album.title %></h5><br>
        <div class="btn-group">
          <%= link_to 'Voir Album', event_album_images_path(@event, album.id), class: 'btn sweetButton' %><br>
          <%= button_to 'Supprimer Album', event_album_path(@event, album.id), method: :delete, class: 'btn btn-danger sweetButton'  %>
        </div>
      </div>
    <% end %>
  </div>
</div>
