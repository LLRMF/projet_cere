<% content_for :title, "Créer un nouvel album photo" %>
<% content_for :meta_description, "Partagez vos souvenirs en créant un nouvel album photo. Ajoutez un titre et une description pour capturer chaque moment." %>

<div class="mt-5 d-flex align-items-center justify-content-center">
  <div class="container-custom newevent">
    <h2 class="form-title ">Créer un nouvel album photo</h2>
    <%= form_for [@event, @album], url: event_albums_path(@event, @album) do |form| %>
      <div class="form-group">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', placeholder: 'Titre de l\'album' %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', placeholder: 'Description de l\'album' %>
      </div>

      <div class="actions">
        <%= form.submit 'Créer l\'album', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
