<% content_for :title, "Création d'un Nouvel Événement" %>
<% content_for :meta_description, "Utilisez notre formulaire pour créer un nouvel événement et célébrer vos moments spéciaux. Indiquez le titre, la date, le lieu et le programme de votre événement." %>

<div class="container-custom events-container-bg">
  <h2>Créer un nouvel évènement</h2>
  <%= form_for(@event, html: { class: 'event-form' }) do |f| %>
    <div class="form-group">
      <%= f.label :titre %><br />
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :date %><br />
      <%= f.datetime_field :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :ville %><br />
      <%= f.text_field :city_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :programme %><br />
      <%= f.text_area :program, class: 'form-control' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Create Event", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
