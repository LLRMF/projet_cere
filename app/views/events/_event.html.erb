<div class="event-cover mb-3">
  <h1><%= @event.title %></h1>
  <h3>L'événement aura lieu le <%= @event.date.strftime('%d-%m-%Y') %></h3>
</div>
<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="mt-3 mb-3">Vos lieux importants</h2>
    <% @event_locations.each do |event_location| %>
      <div class="col-md-5">
        <div class="card event-card d-flex text-black text-center">
          <h4><%= event_location.location.place %></h4>
          <p><%= event_location.location.address %></p>
          <p><%= event_location.date %></p>
        </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-center mt-2 mx-auto">
      <%= link_to "Ajouter l'addresse d'un lieu", new_location_path, class: "btn sweetButton mx-auto mb-2" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-5">
      <h2>Vos invités </h2>
      <% if @guest_users.size != 0 %>
        <p class="text-center">Nombre d'invités : <%= @guest_users.size %></p>
      <% else %>
        <p class="text-center">Vous n'avez pas encore ajouté d'invité à cet événement.</p>
      <% end %>
      <div class="d-flex justify-content-center mt-2 mx-auto">
        <%= link_to "voir la liste d'inviter", guest_list_event_path, class: "btn sweetButton mx-auto" %>
      </div>
    </div>
  </div>
</div>
<div class="event-content row d-flex justify-content-center">
  <%= render "details"%>
  <%= render "program"%>
</div>
<div class="container">
  <div class="row d-flex justify-content-center mb-3">
    <div class="col-md-3">
      <%= link_to 'Album Photo', event_albums_path(@event), class: 'btn sweetButton mx-auto' %>
    </div>
    <div class="col-md-3">
      <%= link_to "Modifier l'événement", edit_event_path(@event), class: "btn sweetButton mx-auto" %>
    </div>
    <div class="col-md-3">
      <%= link_to "Supprimer l'événement", @event, class: "btn sweetButton mx-auto", method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet événement ?' } %>
    </div>
  </div>
</div>