<div class="container mt-5">
  <div class="event-container slide-in-from-bottom text-center">
    <h1 class="guest-heading mb-4 location-content-card">Liste des invités</h1>
  
    <% if @guest_users.present? %>
    <div class="row d-flex justify-content-center">
      <div class="col-md-8 rounded">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Prénom</th>

            </tr>
          </thead>
          <tbody>
            <% @guest_users.each do |user| %>
              <tr>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <% else %>
      <p>Aucun invité pour cet événement.</p>
    <% end %>
    
    <h1 class="guest-heading mt-5 mb-4 location-content-card">Détails de l'événement</h1>
    <p class="mb-2"><strong>Titre :</strong> <%= @event.title %></p>
    <p class="mb-2"><strong>Date :</strong> <%= @event.date %></p>
    <p class="mb-4"><strong>Description :</strong> <%= @event.description %></p>
    <p class="mb-4"><strong>Programme :</strong> <%= @event.program %></p>
    <!-- Ajoutez cette balise img avec le chemin de votre image -->
    <img src="https://images.unsplash.com/photo-1624634564754-e45be6d06159?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzR8fG1hcmlhZ2UlMjBldmVuZW1lbnR8ZW58MHx8MHx8fDA%3D" alt="Description de l'image" class="img-fluid rounded-image">
    <div class="row mt-3 d-flex justify-content-center">
      <div class= "col-md-2">
        <%= link_to 'Ajouter un lieu', new_location_path(), class: 'btn sweetButton mt-3 rounded-button mx-auto' %>
      </div>
      <div class= "col-md-2">
        <%= link_to 'Album Photo', event_albums_path(@event), class: 'btn sweetButton mt-3 rounded-button mx-auto' %>
      </div>
    </div>
    <div class="mt-4">
      <% @event_locations.each do |event_location| %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= event_location.location.place %></h5>
            <p class="card-text"><%= event_location.date %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="application/ld+json">
  <%= event_jsonld(@event) %>
</script>