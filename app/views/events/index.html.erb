<header>
  <h2>Liste de vos événements</h2>
</header>
<div class="events-container" style="background-image: url('https://plus.unsplash.com/premium_photo-1676272747130-348694463771?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8ZmxldXJzJTIwcm9zZXxlbnwwfDB8MHx8fDA%3D');">
  <% @events.each do |event| %>
    <div class="event-card">
      <%= link_to event_path(event) do %>
        <h2><%= event.title %></h2>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to 'Créer un nouvel événement', new_event_path, class: 'create-event-link' %>
