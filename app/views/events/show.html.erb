<% content_for :title, "Détails de l'Événement" %>
<% content_for :meta_description, "Consultez les détails de cet événement, y compris la liste des invités, les informations sur l'événement et explorez les photos de l'album." %>
<div class="banner-event">
<div class="banner-content-event">
  <h1>CEREMONIA</h1>
  <p>La planification de mon mariage. Facile et ludique.</p>
  
</div>
</div>

<div class="event-container animate-bottom mt-5">

  <div class="row">
    <!-- Texte à gauche -->
    <div class="col-md-6 text-left img-events-show-guest">
      <h1 class="guest-heading mb-4 location-content-card">Liste des invités</h1>

      <% if @guest_users.present? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% @guest_users.each do |user| %>
              <tr>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
                <td><%= user.email %></td>
                <!-- Afficher d'autres informations si nécessaire -->
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <!-- Gérer le cas où il n'y a pas d'invités -->
      <% end %>
    </div>

    <!-- Image à droite -->
    <div class="col-md-6 text-right">
      <img src="https://images.unsplash.com/photo-1624634564754-e45be6d06159?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MzR8fG1hcmlhZ2UlMjBldmVuZW1lbnR8ZW58MHx8MHx8fDA%3D" alt="" class="img-event-show">
    </div>
  </div>

  <!-- Détails de l'événement -->
  <h1 class="guest-heading mt-5 mb-4 location-content-card">Détails de l'événement</h1>
  <p class="mb-2"><strong>Titre :</strong> <%= @event.title %></p>
  <p class="mb-2"><strong>Date :</strong> <%= @event.date %></p>
  <p class="mb-4"><strong>Programme :</strong> <%= @event.program %></p>

</div>

<%= link_to 'Add Location', add_location_event_path(@event), class: 'btn sweetButton' %>
<%= link_to 'Album Photo', event_albums_path(@event), class: 'btn sweetButton' %>

<div>
  <% @event_locations.each do |event_location| %>
    <div class="guest-heading">
      <p class="mb-2"><%= event_location.location.place %></p>
      <p class="mb-2"><%= event_location.date %></p>
    </div>
  <% end %>
</div>

<script type="application/ld+json">
  <%= event_jsonld(@event) %>
</script>
