<% if notice.present? %>
  <div class="toast show position-absolute bottom-0 end-0 mb-3 me-3" role="alert" aria-live="assertive" aria-atomic="true" id="notice-toast">
    <div class="toast-header">
      <strong class="me-auto"></strong>
      <h6 class="text-center">Notification</h6>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      <p><%= notice %></p>
    </div>
  </div>

  <script>
    // JavaScript to close the notice toast after 10 seconds
    setTimeout(function() {
      document.getElementById('notice-toast').remove();
    }, 10000);
  </script>
<% end %>

