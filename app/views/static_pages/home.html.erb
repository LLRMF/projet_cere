      <%= image_tag('main.png', class: 'img-fluid mx-auto d-block', alt: 'main', style: 'max-width: 100%; max-height: 500px;') %>
    </div>
    <div class="col-md-3 mt-5 d-flex justify-content-center">
      <div class="row" id="">
        <h1 class="text-center">CEREMONIA</h1>
